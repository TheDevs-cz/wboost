{% extends 'base.html.twig' %}

{% block title %}Editace šablony patičky e-mailu{% endblock %}
{% set active_menu_item = 'emails' %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-home-alt"></i> <a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item"><a href="{{ path('project_dashboard', {'id': project.id}) }}">{{ project.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('email_signature_templates', {'id': project.id}) }}">E-maily</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.backgroundImage) }}

            {% if email_template.backgroundImage %}
                <div style="width: 200px;" class="mb-3">
                    <img class="img-thumbnail" src="{{ uploaded_asset(email_template.backgroundImage) }}">
                </div>
            {% endif %}

            <button class="btn btn-primary" type="submit">Uložit</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
