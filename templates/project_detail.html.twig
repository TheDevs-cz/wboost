{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-copy-alt"></i> <a href="{{ path('homepage') }}">Manuály</a></li>
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xxl-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="header-title">Editace manuálu</h4>

                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle arrow-none card-drop p-0" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-dots-vertical"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a href="{{ path('edit_project', {'projectId': project.id.toString}) }}" class="dropdown-item"><i class="mdi mdi-pencil me-1"></i>Upravit</a>
                            <a href="{{ path('delete_project', {'projectId': project.id.toString}) }}" class="dropdown-item"><i class="mdi mdi-delete me-1"></i>Smazat</a>
                        </div>
                    </div>
                </div>

                <div class="card-body pt-1">

                    <a href="#">
                        <div class="d-flex align-items-center border border-light bg-primary-lighten rounded p-2 mb-2">
                            <div class="flex-shrink-0 me-2">
                                <i class="ri-shield-cross-line widget-icon rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-semibold my-0">Logotypy ({{ project.logosCount }})</h5>
                            </div>
                        </div>
                    </a>

                    <a href="#">
                        <div class="d-flex align-items-center border border-light rounded p-2 mb-2">
                            <div class="flex-shrink-0 me-2">
                                <i class="ri-font-size widget-icon rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-semibold my-0">Font (0)</h5>
                            </div>
                        </div>
                    </a>

                    <a href="#">
                        <div class="d-flex align-items-center border border-light rounded p-2 mb-2">
                            <div class="flex-shrink-0 me-2">
                                <i class="ri-sip-line widget-icon rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="fw-semibold my-0">Barevná paleta (0)</h5>
                            </div>
                        </div>
                    </a>

                </div>
            </div>
        </div>

        <div class="col-xxl-9">
            {{ form_start(project_images_form) }}

            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoHorizontal ? uploaded_asset(project.logoHorizontal) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoHorizontal) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoVertical ? uploaded_asset(project.logoVertical) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoVertical) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoHorizontalWithClaim ? uploaded_asset(project.logoHorizontalWithClaim) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoHorizontalWithClaim) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoVerticalWithClaim ? uploaded_asset(project.logoVerticalWithClaim) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoVerticalWithClaim) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoSymbol ? uploaded_asset(project.logoSymbol) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoSymbol) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <p>
                <input type="submit" name="submit" value="Uložit" class="btn btn-primary">
            </p>

            {{ form_end(project_images_form) }}
        </div>
    </div>
{% endblock %}
