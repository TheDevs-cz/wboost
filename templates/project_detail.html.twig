{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Manuály</a></li>
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item active">{{ project.name }}</li>
    </ol>
{% endblock %}

{% block content %}

    {{ form_start(project_images_form) }}

    {{ form_row(project_images_form.logoHorizontal) }}
    {{ form_row(project_images_form.logoVertical) }}
    {{ form_row(project_images_form.logoHorizontalWithClaim) }}
    {{ form_row(project_images_form.logoVerticalWithClaim) }}
    {{ form_row(project_images_form.logoSymbol) }}

    <p>
        <input type="submit" name="submit" value="Uložit" class="btn btn-primary">
    </p>

    {{ form_end(project_images_form) }}

    {% if project.logoHorizontal %}
        <img src="{{ uploaded_asset(project.logoHorizontal) }}">
    {% endif %}
{% endblock %}
