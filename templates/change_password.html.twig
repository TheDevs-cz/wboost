{% extends 'base.html.twig' %}

{% block title %}Změna hesla{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-copy-alt"></i> <a href="{{ path('homepage') }}">Manuály</a></li>
        <li class="breadcrumb-item"><a href="{{ path('user_profile') }}">Můj účet</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.password) }}

            <p>
                <button class="btn btn-primary" type="submit">Uložit</button>
            </p>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

