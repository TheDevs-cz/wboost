{% extends 'base.html.twig' %}

{% block body_class %}authentication-bg position-relative{% endblock %}

{% block full_content %}
    <div class="position-absolute start-0 end-0 start-0 bottom-0 w-100 h-100">
        <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 800 800">
            <g fill-opacity="0.22">
                <circle style="fill: rgba(var(--ct-primary-rgb), 0.1);" cx="400" cy="400" r="600"></circle>
                <circle style="fill: rgba(var(--ct-primary-rgb), 0.2);" cx="400" cy="400" r="500"></circle>
                <circle style="fill: rgba(var(--ct-primary-rgb), 0.3);" cx="400" cy="400" r="300"></circle>
                <circle style="fill: rgba(var(--ct-primary-rgb), 0.4);" cx="400" cy="400" r="200"></circle>
                <circle style="fill: rgba(var(--ct-primary-rgb), 0.5);" cx="400" cy="400" r="100"></circle>
            </g>
        </svg>
    </div>

    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-4 col-lg-5">
                    <div class="card">

                        <!-- Logo -->
                        <div class="card-header py-4 text-center bg-dark">
                            <span><img src="{{ asset('images/logo-lg.svg') }}" alt="logo" height="22"></span>
                        </div>

                        <div class="card-body p-4">
                            {% if error %}
                                <div class="alert alert-danger small">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center pb-0 fw-bold">Přihlášení</h4>
                                <p class="text-muted mb-4">Zadejte váš e-mail a heslo pro přístup do systému.</p>
                            </div>

                            <form action="{{ path('login') }}" method="post">

                                <div class="mb-3">
                                    <label for="emailaddress" class="form-label">E-mail</label>
                                    <input class="form-control" type="email" id="emailaddress" name="_username" required="required" placeholder="Zadejte váš e-mail" value="{{ last_username }}">
                                </div>

                                <div class="mb-3">
                                    <a href="pages-recoverpw.html" class="text-muted float-end"><small>Zapomněli jste heslo?</small></a>
                                    <label for="password" class="form-label">Heslo</label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" id="password" class="form-control" name="_password" placeholder="Zadejte vaše heslo">
                                        <div class="input-group-text" data-password="false">
                                            <span class="password-eye"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3 mb-0 text-center">
                                    <button class="btn btn-dark" type="submit"> Přihlásit se </button>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p class="text-muted">Nemáte účet? <a href="pages-register.html" class="text-muted ms-1"><b>Zaregistrujte se</b></a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
{% endblock %}
