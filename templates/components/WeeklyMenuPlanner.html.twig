<div {{ attributes.defaults({
    'data-controller': 'planner-collapsible-opener',
    'data-planner-collapsible-opener-ids-value': openCollapsibles|json_encode
}) }}>
    {% if lastSaved %}
        <div class="text-success small mb-2"><i class="mdi mdi-check-circle"></i> Uloženo {{ lastSaved }}</div>
    {% endif %}

    {% set weeklyNutrition = menu.nutritionalValues %}
    {% if weeklyNutrition.hasAnyValue %}
        <div class="nutrition-stats-weekly mb-3">
            <div class="nutrition-stats-header">
                <i class="mdi mdi-calendar-week"></i>
                <span>Týdenní souhrn</span>
                {% if not weeklyNutrition.isComplete %}
                    <span class="nutrition-incomplete-badge" title="Některá jídla nemají vyplněné nutriční hodnoty"><i class="mdi mdi-alert"></i></span>
                {% endif %}
            </div>
            <div class="nutrition-stats-grid">
                {% if weeklyNutrition.energyValue is not null %}
                    <div class="nutrition-stat-item">
                        <span class="nutrition-stat-value">{{ weeklyNutrition.formatEnergyValue }}</span>
                        <span class="nutrition-stat-label">Energie</span>
                    </div>
                {% endif %}
                {% if weeklyNutrition.fats is not null %}
                    <div class="nutrition-stat-item">
                        <span class="nutrition-stat-value">{{ weeklyNutrition.formatFats }}</span>
                        <span class="nutrition-stat-label">Tuky</span>
                    </div>
                {% endif %}
                {% if weeklyNutrition.carbohydrates is not null %}
                    <div class="nutrition-stat-item">
                        <span class="nutrition-stat-value">{{ weeklyNutrition.formatCarbohydrates }}</span>
                        <span class="nutrition-stat-label">Sacharidy</span>
                    </div>
                {% endif %}
                {% if weeklyNutrition.proteins is not null %}
                    <div class="nutrition-stat-item">
                        <span class="nutrition-stat-value">{{ weeklyNutrition.formatProteins }}</span>
                        <span class="nutrition-stat-label">Bílkoviny</span>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <div class="row" data-controller="weekly-menu-dragula">
        {% for day in menu.days %}
            <div class="col-12 mb-4">
                <details id="day-{{ day.id }}" class="collapsible-section collapsible-day" data-controller="collapsible">
                    <summary class="card-header d-flex justify-content-between align-items-baseline position-relative" style="background-color: rgba(var(--bs-primary-rgb), 0.08); border: 1px solid #727cf5; border-left: 4px solid #727cf5; border-radius: 0.25rem; cursor: pointer; list-style: none; padding: 0.75rem 1rem;">
                        <div class="d-flex align-items-center gap-2">
                            <i class="mdi mdi-chevron-right collapsible-icon"></i>
                            <h5 class="m-0">
                                {{ day.dayLabel }}
                                {% if day.date %}
                                    <small class="fw-normal" style="font-size: 0.75rem;">({{ day.date|date('d.m.Y') }})</small>
                                {% endif %}
                            </h5>
                            {% set dayNutrition = day.nutritionalValues %}
                            {% if dayNutrition.hasAnyValue %}
                                <div class="nutrition-badges">
                                    {% if dayNutrition.energyValue is not null %}
                                        <span class="nutrition-badge-item" style="color: #727cf5;">{{ dayNutrition.formatEnergyValue }}</span>
                                    {% endif %}
                                    {% if dayNutrition.fats is not null %}
                                        <span class="nutrition-badge-item" style="color: #727cf5;">T: {{ dayNutrition.formatFats }}</span>
                                    {% endif %}
                                    {% if dayNutrition.carbohydrates is not null %}
                                        <span class="nutrition-badge-item" style="color: #727cf5;">S: {{ dayNutrition.formatCarbohydrates }}</span>
                                    {% endif %}
                                    {% if dayNutrition.proteins is not null %}
                                        <span class="nutrition-badge-item" style="color: #727cf5;">B: {{ dayNutrition.formatProteins }}</span>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                        <button
                            type="button"
                            class="btn btn-sm btn-link p-0 m-0"
                            style="color: rgba(114, 124, 245, 0.75);"
                            data-controller="confirm"
                            data-confirm-message-value="Opravdu smazat celý den včetně všech jídel?"
                            data-action="click->confirm#confirm click->live#action"
                            data-live-action-param="removeDay"
                            data-live-dayid-param="{{ day.id }}"
                            onclick="event.stopPropagation();">
                            <i class="mdi mdi-delete"></i>
                        </button>
                    </summary>
                    <div class="collapsible-content" data-collapsible-target="content">
                        <div class="collapsible-inner">
                            <div class="p-3" style="border: 1px solid #727cf5; border-top: none; border-left: 4px solid #727cf5; border-radius: 0 0 0.25rem 0.25rem;">
                        {% for mealType in day.mealTypes %}
                            <details id="meal-type-{{ mealType.id }}" class="collapsible-section collapsible-meal-type mb-3" data-controller="collapsible">
                                <summary class="card-header d-flex justify-content-between align-items-center py-2" style="background-color: {{ mealType.mealType.cssColor }}20; border: 1px solid {{ mealType.mealType.cssColor }}40; border-left: 4px solid {{ mealType.mealType.cssColor }}; border-radius: 0.25rem; cursor: pointer; list-style: none; padding: 0.5rem 1rem;">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="mdi mdi-chevron-right collapsible-icon"></i>
                                        <span class="fw-bold">{{ mealType.mealType.label }}</span>
                                        {% set mealTypeNutrition = mealType.nutritionalValues %}
                                        {% if mealTypeNutrition.hasAnyValue %}
                                            <div class="nutrition-badges">
                                                {% if mealTypeNutrition.energyValue is not null %}
                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">{{ mealTypeNutrition.formatEnergyValue }}</span>
                                                {% endif %}
                                                {% if mealTypeNutrition.fats is not null %}
                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">T: {{ mealTypeNutrition.formatFats }}</span>
                                                {% endif %}
                                                {% if mealTypeNutrition.carbohydrates is not null %}
                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">S: {{ mealTypeNutrition.formatCarbohydrates }}</span>
                                                {% endif %}
                                                {% if mealTypeNutrition.proteins is not null %}
                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">B: {{ mealTypeNutrition.formatProteins }}</span>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <div class="dropdown d-inline-block">
                                            <button type="button" class="btn btn-sm dropdown-toggle"
                                                    style="background-color: {{ mealType.mealType.cssColor }}; border-color: {{ mealType.mealType.cssColor }}; color: white;"
                                                    data-bs-toggle="dropdown"
                                                    onclick="event.stopPropagation();">
                                                <i class="mdi mdi-plus"></i> Chod
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <button type="button" class="dropdown-item"
                                                            data-action="live#action"
                                                            data-live-action-param="addCourse"
                                                            data-live-mealtypeid-param="{{ mealType.id }}"
                                                            data-live-singlevariantmode-param="true">
                                                        <i class="mdi mdi-silverware-fork-knife"></i> Bez výběru
                                                        <small class="d-block text-muted">Jednoduchý chod</small>
                                                    </button>
                                                </li>
                                                <li>
                                                    <button type="button" class="dropdown-item"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#variantCountModal"
                                                            data-meal-type-id="{{ mealType.id }}">
                                                        <i class="mdi mdi-format-list-bulleted"></i> S výběrem variant
                                                        <small class="d-block text-muted">Zákazník vybírá z možností</small>
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                        <button
                                            type="button"
                                            class="btn btn-sm btn-link p-0 m-0 ms-2"
                                            style="color: {{ mealType.mealType.cssColor }}BF;"
                                            data-controller="confirm"
                                            data-confirm-message-value="Opravdu smazat toto jídlo dne?"
                                            data-action="click->confirm#confirm click->live#action"
                                            data-live-action-param="removeMealType"
                                            data-live-mealtypeid-param="{{ mealType.id }}"
                                            onclick="event.stopPropagation();">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                    </div>
                                </summary>
                                <div class="collapsible-content" data-collapsible-target="content">
                                    <div class="collapsible-inner">
                                        <div class="p-3"
                                             style="background-color: {{ mealType.mealType.cssColor }}15; border: 1px solid {{ mealType.mealType.cssColor }}40; border-top: none; border-radius: 0 0 0.25rem 0.25rem;"
                                             data-weekly-menu-dragula-target="coursesContainer"
                                             data-meal-type-id="{{ mealType.id }}">
                                    {% if mealType.courses|length == 0 %}
                                        <p class="text-muted mb-0 small">Zatím žádné chody. Klikněte na "+ Chod" pro přidání.</p>
                                    {% else %}
                                        {% for course in mealType.courses %}
                                            <details id="course-{{ course.id }}" class="collapsible-section collapsible-course mb-2" data-course-id="{{ course.id }}" data-controller="collapsible">
                                                <summary class="d-flex justify-content-between align-items-center p-2 bg-white" style="cursor: pointer; list-style: none; padding: 0.5rem 0.75rem !important;">
                                                    <span class="text-muted small d-flex align-items-center gap-1">
                                                        <i class="mdi mdi-chevron-right collapsible-icon"></i>
                                                        {% if mealType.courses|length > 1 %}
                                                            <i class="mdi mdi-drag course-drag-handle" style="cursor: grab;" onclick="event.stopPropagation();"></i>
                                                        {% endif %}
                                                        Chod {{ loop.index }}
                                                        {% if not course.singleVariantMode %}
                                                            <span class="badge bg-secondary ms-1">{{ course.variants|length }} variant</span>
                                                        {% endif %}
                                                        {% set courseNutrition = course.nutritionalValues %}
                                                        {% if courseNutrition.hasAnyValue %}
                                                            <div class="nutrition-badges ms-2">
                                                                {% if courseNutrition.energyValue is not null %}
                                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">{{ courseNutrition.formatEnergyValue }}</span>
                                                                {% endif %}
                                                                {% if courseNutrition.fats is not null %}
                                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">T: {{ courseNutrition.formatFats }}</span>
                                                                {% endif %}
                                                                {% if courseNutrition.carbohydrates is not null %}
                                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">S: {{ courseNutrition.formatCarbohydrates }}</span>
                                                                {% endif %}
                                                                {% if courseNutrition.proteins is not null %}
                                                                    <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">B: {{ courseNutrition.formatProteins }}</span>
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                        <button
                                                            type="button"
                                                            class="btn btn-link btn-sm text-muted p-0 ms-1"
                                                            style="line-height: 1;"
                                                            data-controller="confirm"
                                                            data-confirm-message-value="Opravdu smazat tento chod?"
                                                            data-action="click->confirm#confirm click->live#action"
                                                            data-live-action-param="removeCourse"
                                                            data-live-courseid-param="{{ course.id }}"
                                                            onclick="event.stopPropagation();">
                                                            <i class="mdi mdi-delete"></i>
                                                        </button>
                                                    </span>
                                                </summary>
                                                <div class="collapsible-content" data-collapsible-target="content">
                                                    <div class="collapsible-inner">
                                                        <div class="p-2 bg-white"
                                                             data-weekly-menu-dragula-target="variantsContainer"
                                                             data-course-id="{{ course.id }}">
                                                {% if course.variants|length == 0 %}
                                                    <p class="text-muted mb-0 small">Zatím žádné varianty. Klikněte na "+ Varianta" pro přidání.</p>
                                                {% else %}
                                                    {% for variant in course.variants %}
                                                        <div class="{% if not course.singleVariantMode %}mb-2{% endif %}" data-variant-id="{{ variant.id }}">
                                                            <div class="{% if not course.singleVariantMode %}d-flex justify-content-between align-items-center{% endif %}{% if variant.meals|length > 0 and not course.singleVariantMode %} mb-2{% endif %}">
                                                                <div class="d-flex align-items-center gap-2">
                                                                    {% if not course.singleVariantMode %}
                                                                        {% if course.variants|length > 1 %}
                                                                            <i class="mdi mdi-drag variant-drag-handle" style="cursor: grab;"></i>
                                                                        {% endif %}
                                                                        <input
                                                                            type="text"
                                                                            class="form-control form-control-sm"
                                                                            style="width: 150px;"
                                                                            placeholder="Název varianty..."
                                                                            value="{{ variant.name }}"
                                                                            data-variant-id="{{ variant.id }}"
                                                                            data-action="change->variant-name#save"
                                                                            data-controller="variant-name">
                                                                        <button
                                                                            type="button"
                                                                            class="btn btn-link btn-sm text-muted p-0 ms-1"
                                                                            style="line-height: 1;"
                                                                            data-controller="confirm"
                                                                            data-confirm-message-value="Opravdu smazat tuto variantu?"
                                                                            data-action="click->confirm#confirm click->live#action"
                                                                            data-live-action-param="removeVariant"
                                                                            data-live-variantid-param="{{ variant.id }}">
                                                                            <i class="mdi mdi-delete"></i>
                                                                        </button>
                                                                        <span class="text-muted" style="font-size: 0.7rem;">Jídla mezi kterými si zákazník vybírá. (Doporučeno např. A, B, C nebo 1, 2, 3)</span>
                                                                    {% elseif variant.meals|length == 0 %}
                                                                        <span class="text-muted small">Zatím žádná jídla</span>
                                                                    {% endif %}
                                                                </div>
                                                            </div>

                                                            {% if variant.meals|length > 0 %}
                                                                <div class="meal-selector-grid"
                                                                     data-weekly-menu-dragula-target="mealsContainer"
                                                                     data-variant-id="{{ variant.id }}">
                                                                    {% for variantMeal in variant.meals %}
                                                                        <div class="meal-selector-item planner-meal-card{% if variant.meals|length > 1 %} draggable{% endif %}"
                                                                             style="border-left: 3px solid {{ variantMeal.meal.mealType.cssColor }};{% if variant.meals|length > 1 %} cursor: grab;{% endif %}"
                                                                             data-variant-meal-id="{{ variantMeal.id }}">
                                                                            {% include 'partials/_meal_card.html.twig' with {
                                                                                meal: variantMeal.meal,
                                                                                showCloseButton: true,
                                                                                closeButtonAction: 'live#action',
                                                                                closeButtonParam: variantMeal.id
                                                                            } only %}
                                                                        </div>
                                                                    {% endfor %}
                                                                    <button
                                                                        type="button"
                                                                        class="meal-selector-item add-meal-btn"
                                                                        style="background-color: transparent; border: 2px dashed {{ mealType.mealType.cssColor }}80; color: {{ mealType.mealType.cssColor }}; display: flex; align-items: center; justify-content: center; min-height: 75px; cursor: pointer;"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#mealSelectorModal"
                                                                        data-variant-id="{{ variant.id }}">
                                                                        <span><i class="mdi mdi-plus"></i> Přidat jídlo</span>
                                                                    </button>
                                                                </div>
                                                                {% set variantNutrition = variant.nutritionalValues %}
                                                                {% if variantNutrition.hasAnyValue and variant.meals|length > 1 %}
                                                                    <div class="nutrition-summary nutrition-summary-variant">
                                                                        <span class="nutrition-label">Celkem varianta:</span>
                                                                        <div class="nutrition-badges">
                                                                            {% if variantNutrition.energyValue is not null %}
                                                                                <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">{{ variantNutrition.formatEnergyValue }}</span>
                                                                            {% endif %}
                                                                            {% if variantNutrition.fats is not null %}
                                                                                <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">T: {{ variantNutrition.formatFats }}</span>
                                                                            {% endif %}
                                                                            {% if variantNutrition.carbohydrates is not null %}
                                                                                <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">S: {{ variantNutrition.formatCarbohydrates }}</span>
                                                                            {% endif %}
                                                                            {% if variantNutrition.proteins is not null %}
                                                                                <span class="nutrition-badge-item" style="color: {{ mealType.mealType.cssColor }};">B: {{ variantNutrition.formatProteins }}</span>
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>
                                                                {% endif %}
                                                            {% else %}
                                                                {% if not course.singleVariantMode %}
                                                                    <p class="text-muted mb-2 small">Zatím žádná jídla</p>
                                                                {% endif %}
                                                                <div class="meal-selector-grid">
                                                                    <button
                                                                        type="button"
                                                                        class="meal-selector-item add-meal-btn"
                                                                        style="background-color: transparent; border: 1px solid {{ mealType.mealType.cssColor }}80; color: {{ mealType.mealType.cssColor }}; display: flex; align-items: center; justify-content: center; min-height: 75px; cursor: pointer;"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#mealSelectorModal"
                                                                        data-variant-id="{{ variant.id }}">
                                                                        <span><i class="mdi mdi-plus"></i> Přidat jídlo</span>
                                                                    </button>
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                        {% if not loop.last and not course.singleVariantMode %}
                                                            <hr class="my-3" style="border-color: {{ mealType.mealType.cssColor }}40;">
                                                        {% endif %}
                                                    {% endfor %}
                                                    {% if not course.singleVariantMode %}
                                                        <button
                                                            type="button"
                                                            class="btn btn-sm btn-secondary mt-2"
                                                            data-action="live#action"
                                                            data-live-action-param="addVariant"
                                                            data-live-courseid-param="{{ course.id }}"
                                                            data-live-name-param="">
                                                            <i class="mdi mdi-plus"></i> Varianta
                                                        </button>
                                                    {% endif %}
                                                {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </details>
                                        {% endfor %}
                                    {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </details>
                        {% else %}
                            <p class="text-muted">Zatím žádné typy jídel pro tento den.</p>
                        {% endfor %}

                        {% set availableMealTypesForDay = this.availableMealTypesForDay(day) %}
                        {% if availableMealTypesForDay|length > 0 %}
                            <div class="dropdown">
                                <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="mdi mdi-plus"></i> Přidat typ jídla
                                </button>
                                <ul class="dropdown-menu">
                                    {% for mealTypeOption in availableMealTypesForDay %}
                                        <li>
                                            <button
                                                type="button"
                                                class="dropdown-item d-flex align-items-center"
                                                data-action="live#action"
                                                data-live-action-param="addMealType"
                                                data-live-dayid-param="{{ day.id }}"
                                                data-live-mealtype-param="{{ mealTypeOption.value }}">
                                                <span class="meal-type-dot me-2" style="background-color: {{ mealTypeOption.cssColor }}; box-shadow: inset 0 0 0 2px rgba(0,0,0,0.15);"></span>
                                                {{ mealTypeOption.label }}
                                            </button>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% else %}
                            <p class="text-muted small mb-0"><i class="mdi mdi-check-circle text-success"></i> Všechny typy jídel jsou přidány</p>
                        {% endif %}
                            </div>
                        </div>
                    </div>
                </details>
            </div>
        {% endfor %}
    </div>

    <!-- Meal Selector Modal -->
    <div class="modal fade" id="mealSelectorModal" tabindex="-1" aria-labelledby="mealSelectorModalLabel" aria-hidden="true"
         data-controller="meal-selector">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mealSelectorModalLabel">Vybrat jídlo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" data-meal-selector-target="variantId" value="">

                    {% set allMeals = this.meals %}
                    {% set allDiets = this.diets %}
                    {% set allMealTypes = this.availableMealTypes %}
                    {% if allMeals|length == 0 %}
                        <div class="alert alert-info">
                            Zatím nebyla vytvořena žádná jídla. <a href="{{ path('meals', {'projectId': menu.project.id}) }}">Vytvořte je zde.</a>
                        </div>
                    {% else %}
                        <div class="row mb-3">
                            <div class="col-md-6 mb-2 mb-md-0">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Hledat jídlo..."
                                       data-meal-selector-target="searchInput"
                                       data-action="input->meal-selector#filter">
                            </div>
                            <div class="col-md-3 mb-2 mb-md-0">
                                <select class="form-select"
                                        data-meal-selector-target="mealTypeFilter"
                                        data-action="change->meal-selector#filter">
                                    <option value="">Všechny typy jídel</option>
                                    {% for mealType in allMealTypes %}
                                        <option value="{{ mealType.value }}">{{ mealType.label }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select"
                                        data-meal-selector-target="dietFilter"
                                        data-action="change->meal-selector#filter">
                                    <option value="">Všechny diety</option>
                                    {% for diet in allDiets %}
                                        <option value="{{ diet.id }}">{{ diet.name }} ({{ diet.codesLabel }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="meal-selector-grid" data-meal-selector-target="mealsContainer">
                            {% for meal in allMeals %}
                                <div class="meal-selector-item"
                                     data-meal-selector-target="mealCard"
                                     data-meal-type="{{ meal.mealType.value }}"
                                     data-diet-id="{{ meal.diet ? meal.diet.id : '' }}"
                                     data-search-text="{{ meal.internalName|lower }} {{ meal.name|lower }} {{ meal.dietCodesLabel|lower }}"
                                     data-meal-id="{{ meal.id }}"
                                     data-action="click->meal-selector#selectMeal"
                                     style="border-left: 3px solid {{ meal.mealType.cssColor }};">
                                    {% include 'partials/_meal_card.html.twig' with {meal: meal} only %}
                                </div>
                            {% endfor %}
                        </div>

                        <div class="alert alert-warning d-none" data-meal-selector-target="noResults">
                            Žádná jídla neodpovídají zadaným filtrům.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Variant Count Modal -->
    <div class="modal fade" id="variantCountModal" tabindex="-1" aria-labelledby="variantCountModalLabel" aria-hidden="true"
         data-controller="variant-count-modal">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="variantCountModalLabel">Počet variant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" data-variant-count-modal-target="mealTypeId" value="">
                    <div class="mb-3">
                        <label class="form-label">Kolik variant chcete vytvořit?</label>
                        <input type="number" class="form-control" min="2" max="10" value="2"
                               data-variant-count-modal-target="variantCount">
                        <div class="form-text">Zákazník si vybere jednu z variant.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zrušit</button>
