{% extends 'base_project.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-copy-alt"></i> <a href="{{ path('homepage') }}">Manuály</a></li>
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item"><a href="{{ path('project_logos', {projectId: project.id}) }}">{{ project.name }}</a></li>
        <li class="breadcrumb-item active">Logotypy</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xxl-3">
            {{ include('_project_nav.html.twig') }}
        </div>

        <div class="col-xxl-9">
            {{ form_start(project_images_form) }}

            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoHorizontal ? uploaded_asset(project.logoHorizontal) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoHorizontal) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoVertical ? uploaded_asset(project.logoVertical) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoVertical) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoHorizontalWithClaim ? uploaded_asset(project.logoHorizontalWithClaim) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoHorizontalWithClaim) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoVerticalWithClaim ? uploaded_asset(project.logoVerticalWithClaim) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoVerticalWithClaim) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <img class="rounded-circle img-thumbnail avatar-lg" src="{{ project.logoSymbol ? uploaded_asset(project.logoSymbol) : asset('images/logo-placeholder.png') }}">
                                </div>
                                <div class="col-sm-9">
                                    {{ form_row(project_images_form.logoSymbol) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <p>
                <input type="submit" name="submit" value="Uložit" class="btn btn-primary">
            </p>

            {{ form_end(project_images_form) }}
        </div>
    </div>
{% endblock %}
