{% extends 'base.html.twig' %}

{% set active_menu_item = 'social_networks' %}

{% block title %}Sociální sítě{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-home-alt"></i> <a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item"><a href="{{ path('project_dashboard', {'id': project.id}) }}">{{ project.name }}</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}

    {% if is_granted('ROLE_DESIGNER') %}
        <div class="row mb-2">
            <div class="col-sm-12">
                <a href="{{ path('add_social_network_template', {'id': project.id.toString}) }}" class="btn btn-outline-primary rounded-pill mb-3"><i class="mdi mdi-plus"></i> Nová šablona</a>
            </div>
        </div>
    {% endif %}

    <div class="row">
        {% for template in templates %}
            <div class="col-md-6 col-xxl-3">
                <div class="card d-block">
                    {% if is_granted('social_edit', template) %}
                        <div class="card-img-overlay dropdown card-widgets" style="left: auto;bottom: auto;">
                            <a href="#" class="dropdown-toggle arrow-none" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="ri-more-fill"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="{{ path('edit_social_network_template', {'templateId': template.id}) }}" class="dropdown-item"><i class="mdi mdi-pencil me-1"></i>Upravit</a>
                                <a href="{{ path('delete_social_network_template', {'templateId': template.id}) }}" class="dropdown-item"><i class="mdi mdi-delete me-1"></i>Smazat</a>
                            </div>
                        </div>
                    {% endif %}

                    <a href="{{ path('social_network_template_variants', {'templateId': template.id}) }}" class="text-body">
                        <div class="card-body">
                            <h4 class="mt-0">
                                {{ template.name }}
                            </h4>
                        </div>

                        <img class="card-img-bottom" src="{{ template.image ? uploaded_asset(template.image) : asset('images/manual-placeholder.png') }}" alt="{{ template.name }}">
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
