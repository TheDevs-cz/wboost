        <div class="container-fluid" style="max-width: 1320px;">
            {% set page = 0 %}

            {% if manual.introImage %}
                {% set page = page+1 %}
                <div class="manual-page border-bottom border-2" id="page-{{ page }}">
                    <div class="page-heading py-3 border-bottom">
                        <span class="d-inline-block pe-4 fs-4">{{ "%02d"|format(page) }}</span>
                        <span class="d-inline-block pe-4 fs-4">{{ manual.name }}</span>
                        <span class="d-inline-block pe-4 fs-4 fw-bold">Úvod</span>
                        <span class="d-inline-block float-end fs-4">{{ manual.brandManual ? 'Brand manuál' : 'Logo manuál' }}</span>
                    </div>

                    <div class="page-content py-4 gx-5 row">
                        <div class="page-description col-12 text-center">
                            <img src="{{ uploaded_asset(manual.introImage) }}" style="max-width: 100%;" alt="Úvod">
                        </div>
                    </div>
                </div>
