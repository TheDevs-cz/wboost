{% extends 'base.html.twig' %}

{% block title %}{{ manual.name }}{% endblock %}
{% set active_menu_item = 'manuals' %}

{% block custom_styles %}
    <style>
        {% for font in manual.fonts %}
            {% for font_face in font.faces %}
                @font-face {
                    font-family: '{{ font.name }}';
                    src: url('{{ uploaded_asset(font_face.filePath) }}');
                    font-weight: {{ font_face.weight }};
                    {# TODO: font-style: normal; #}
                }
            {% endfor %}
        {% endfor %}
    </style>
{% endblock %}

