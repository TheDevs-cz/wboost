{% extends 'base.html.twig' %}

{% block title %}{{ manual.name }}{% endblock %}
{% set active_menu_item = 'manuals' %}

{% block meta_viewport %}
    <meta name="viewport" content="width=1400, initial-scale=0.25, maximum-scale=1">
{% endblock %}

{% block custom_styles %}
    <style>
        {% for manual_font in fonts %}
            {% for font_face in manual_font.font.faces %}
                @font-face {
                    font-family: '{{ manual_font.font.name }} ({{ font_face.name }})';
                    src: url('{{ uploaded_asset(font_face.filePath) }}');
                }
            {% endfor %}
        {% endfor %}
    </style>
{% endblock %}

