{% extends 'base_manual.html.twig' %}

{% block title %}Fonty - {{ manual.name }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb m-0 pt-0">
        <li class="breadcrumb-item"><i class="uil-home-alt"></i> <a href="{{ path('homepage') }}">Projekty</a></li>
        <li class="breadcrumb-item"><a href="{{ path('project_dashboard', {'id': project.id}) }}">{{ project.name }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('manuals_list', {'id': project.id}) }}">Manu√°ly</a></li>
        <li class="breadcrumb-item"><a href="{{ path('manual_dashboard', {'id': manual.id}) }}">{{ manual.name }}</a></li>
        <li class="breadcrumb-item active">Fonty</li>
    </ol>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xxl-3">
        {{ include('_manual_nav.html.twig') }}
    </div>

    <div class="col-xxl-9">
        {% for font in available_fonts %}
            <div class="card">
                <div class="card-body">
                    <strong>{{ font.name }}</strong>  <br>
                    <input type="checkbox" id="switch-{{ font.id }}" {{ manual.fontEnabled(font) ? 'checked' }} data-switch="bool"
                           data-controller="checkbox-toggle"
                           data-url-checked="{{ path('enable_manual_font', {'id': manual.id, 'fontId': font.id}) }}"
                           data-url-unchecked="{{ path('disable_manual_font', {'id': manual.id, 'fontId': font.id}) }}"
                           data-checkbox-toggle-target="checkbox"
                    >
                    <label for="switch-{{ font.id }}" data-on-label="On" data-off-label="Off"></label>
                    <br>
                    <p>
                        {% for font_face in font.faces %}
                            {{ font_face.name }}
                            <br>
                        {% endfor %}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
