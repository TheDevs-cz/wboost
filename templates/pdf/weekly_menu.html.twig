<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'DejaVu Sans', sans-serif;
            font-size: 10px;
            line-height: 1.4;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #333;
        }
        .header h1 {
            font-size: 22px;
            margin-bottom: 8px;
        }
        .header .dates {
            font-size: 14px;
            color: #555;
        }
        .header .meta {
            font-size: 11px;
            color: #777;
            margin-top: 8px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }
        th, td {
            border: 1px solid #999;
            padding: 6px 8px;
            vertical-align: top;
            word-wrap: break-word;
        }
        th {
            background-color: #e5e5e5;
            font-weight: bold;
            text-align: center;
            font-size: 11px;
        }
        th.day-header {
            width: 13%;
        }
        th.meal-header {
            width: 9%;
            text-align: left;
        }
        .meal-breakfast { background-color: #FEF3C7; }
        .meal-lunch { background-color: #DBEAFE; }
        .meal-snack { background-color: #D1FAE5; }
        .meal-dinner { background-color: #EDE9FE; }
        .meal-late_dinner { background-color: #F3F4F6; }
        .variant {
            margin-bottom: 8px;
            padding-bottom: 6px;
            border-bottom: 1px dashed #ccc;
        }
        .variant:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }
        .variant-name {
            font-weight: bold;
            font-size: 9px;
            color: #444;
            margin-bottom: 3px;
        }
        .diet-version {
            margin-bottom: 4px;
        }
        .diet-codes {
            font-weight: bold;
            color: #555;
            font-size: 9px;
        }
        .items {
            font-size: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ menu.name }}</h1>
        <div class="dates">{{ menu.validFrom|date('j.n.Y') }} - {{ menu.validTo|date('j.n.Y') }}</div>
        {% if menu.createdBy or menu.approvedBy %}
            <div class="meta">
                {% if menu.createdBy %}Vytvořil: {{ menu.createdBy }}{% endif %}
                {% if menu.createdBy and menu.approvedBy %} · {% endif %}
                {% if menu.approvedBy %}Schválil: {{ menu.approvedBy }}{% endif %}
            </div>
        {% endif %}
    </div>

    <table>
        <thead>
            <tr>
                <th class="meal-header"></th>
                {% for day in menu.days %}
                    <th class="day-header">
                        {{ day.dayLabel }}
                        {% if day.date %}
                            <br><small>{{ day.date|date('j.n.') }}</small>
                        {% endif %}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for mealType in mealTypes %}
                <tr>
                    <th class="meal-header meal-{{ mealType.value }}">{{ mealType.label }}</th>
                    {% for day in menu.days %}
                        {% set meal = day.meal(mealType) %}
                        <td class="meal-{{ mealType.value }}">
                            {% if meal %}
                                {% for variant in meal.variants %}
                                    <div class="variant">
                                        {% if variant.name %}
                                            <div class="variant-name">{{ variant.name }}</div>
                                        {% endif %}
                                        {% for dietVersion in variant.dietVersions %}
                                            <div class="diet-version">
                                                {% if dietVersion.dietCodes %}
                                                    <span class="diet-codes">[{{ dietVersion.dietCodes }}]</span>
                                                {% endif %}
                                                <span class="items">{{ dietVersion.items }}</span>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
