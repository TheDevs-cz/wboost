<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% apply spaceless %}{% block title %}{% endblock %}{% endapply %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <meta name="description" content="{% apply spaceless %}{% block meta_description %}{% endblock %}{% endapply %}{% if block('meta_description') is empty %}{{ 'homepage.meta.description'|trans }}{% endif %}">
        <meta name="keywords" content="{% apply spaceless %}{% block meta_keywords %}{% endblock %}{% endapply %}">

        <link rel="manifest" href="{{ asset('assets/manifest.json') }}">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="theme-color" content="#ffffff">

        <link type="text/plain" rel="author" href="{{ asset('humans.txt') }}" />

        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body>

        {% for label, messages in app.flashes %}
            <div class="container mt-4">
                {% for message in messages %}
                    <div class="alert-dismissible fade show alert alert-{{ label }}" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {% block full_content %}
            <section class="container pt-4">
                {% block content %}{% endblock %}
            </section>
        {% endblock %}

    </body>
</html>
